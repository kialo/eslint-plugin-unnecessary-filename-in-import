{
    "name": "eslint-plugin-unnecessary-filename-in-import",
    "description": "ESLint plugin to remove superfluous filenames in import statements.",
    "version": "1.0.3",
    "main": "lib/index.js",
    "author": "Kialo GmbH <open-source@kialo.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kialo/eslint-plugin-unnecessary-filename-in-import"
    },
    "bugs": {
        "url": "https://github.com/kialo/eslint-plugin-unnecessary-filename-in-import/issues"
    },
    "files": [
        "lib/*",
        "src/*"
    ],
    "scripts": {
        "test": "jest test",
        "lint": "eslint --cache --fix src/**/*.ts test/**/*.ts",
        "lint-ci": "eslint src/**/*.ts test/**/*.ts",
        "tsc": "tsc -p src",
        "typecheck-src": "tsc --noEmit -p src",
        "typecheck-test": "tsc --noEmit -p test",
        "lint-and-test": "yarn typecheck-src && yarn typecheck-test && yarn lint-ci && yarn test"
    },
    "peerDependencies": {
        "eslint": ">= 5.0.0"
    },
    "devDependencies": {
        "@types/eslint": "^7.2.3",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "@typescript-eslint/typescript-estree": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.4.2",
        "jest-circus": "^26.4.2",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "ts-jest": "^26.4.0",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix"
    },
    "engines": {
        "node": ">=10"
    },
    "keywords": [
        "eslint",
        "eslintplugin"
    ]
}
